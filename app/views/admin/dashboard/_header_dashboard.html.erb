<header class="navbar navbar-expand-lg navbar-light"
  style="background-color: #837a65;">
  <div class="container">
    <%= link_to image_tag("logo.png", class: "navbar-brand"), root_path %>
    <button class="navbar-toggler" type="button" data-toggle="collapse"
      data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <!-- Language -->
        <div class="dropdown">
          <button class="btn btn-outline-dark dropdown-toggle" type="button"
            id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false"><%= t(".Languages") %>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <li>
              <%= link_to t(".English"), locale:"en", class: "dropdown-item"%>
            </li>
            <li>
              <%= link_to t(".Vietnamese"), locale:"vi",  
                class: "dropdown-item" %> 
            </li>
          </div>
        </div>
        <!-- End language -->

        <li class="nav-item mr-1">
          <%= link_to t(".home"), root_path, class: "nav-link" %>
        </li>
        <li class="nav-item mr-1">
          <%= link_to t(".users"), admin_users_path, class: "nav-link" %>
        </li>
        <li class="nav-item mr-1">
          <%= link_to t(".products"), admin_products_path, class: "nav-link" %>
        </li>
        <li class="nav-item mr-1">
          <%= link_to t(".categories"), admin_categories_path, 
            class: "nav-link" %>
        </li>

        <% if !user_signed_in? %>
          <li class="nav-item mr-1">
            <%= link_to t(".sign_up"), new_user_registration_path, 
              class: "nav-link btn btn-warning fa fa-user-plus" %>
          </li>
          <li class="nav-item mr-1">
            <%= link_to t(".log_in"), new_user_session_path, 
              class: "nav-link btn btn-success fa fa-lock" %>
          </li>
        <% else %>
        <li>
          <% if current_user.admin? %>
            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle" type="button" 
                id="dropdownMenuButton" data-toggle="dropdown" 
                aria-haspopup="true" aria-expanded="false">

                <%= current_user.name %>
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to t(".change_password"),edit_user_registration_path, 
                  class: "dropdown-item" %>
                <%= link_to t(".log_out"),destroy_user_session_path, 
                  method: :delete, class: "dropdown-item" %>
              </div>
            </div>
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
