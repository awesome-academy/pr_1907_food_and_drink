<h1 class="text-center"><%= t(".create_new_product") %></h1>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= form_for [:admin, @product] do |f| %>
    <div class="field" id="product_picture">
      <%= f.label :picture %>
      <%= f.file_field :picture, accept: "image/jpeg, image/gif/, image/png"%>
    </div>
     
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :price %>
      <%= f.number_field :price, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %> 
    </div>

    <div class="field">
      <%= f.label :status %>
      <%= f.text_field :status, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :body %>
      <%= f.cktext_area :body, rows: 10, class: "form-control" %>
    </div>

    <div class="field mt-2">
      <%= f.label :category_id %>
      <%= f.select :category_id, Category.all.collect { |c| [ c.name, c.id ] },
        include_blank: true %>
    </div>
     
    <div class="actions mt-2">
      <%= f.submit t(".create_product"), class: "btn btn-primary form-control" %>
    </div>
  <% end %>
  </div>
</div>
